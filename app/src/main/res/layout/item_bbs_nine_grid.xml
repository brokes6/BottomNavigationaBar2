<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayou_broder"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <com.example.bottomnavigationabar2.MyImageView
            android:id="@+id/tieze_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"
            android:transitionName="userphoto"/>

        <TextView
            android:id="@+id/tiezi_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-45dp"
            android:text="我是名字"
            android:textColor="@android:color/holo_blue_dark"
            android:transitionName="username"/>
        <TextView
            android:id="@+id/tiezi_time"
            android:layout_marginLeft="290dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:text="我是时间"
            android:transitionName="time"
            />
        <TextView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="71dp"
            android:id="@+id/tieze_felei"
            android:text="-抗压吧-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="12sp"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:id="@+id/tieze_Text"
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="longtext"
            />

        <com.example.bottomnavigationabar2.view.NineGridTestLayout

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:sapcing="4dp"
            android:transitionName="image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:id="@+id/loveLayout"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/loveNum"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/thumbs_up_white" />
                        <TextView
                            android:id="@+id/loveNumStr"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:id="@+id/collectionLayout"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/collection"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/shocang_text" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/collectionStr"
                            android:text="0"
                            android:textColor="#090808"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Lin_Collection"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/talkNum"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/comment_white" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/talkNumStr"
                            android:text="0"
                            android:textColor="#090808"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        </LinearLayout>





    </LinearLayout>