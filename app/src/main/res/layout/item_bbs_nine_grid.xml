<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayou_broder"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <com.example.bottomnavigationabar2.MyImageView
        android:id="@+id/tieze_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tiezi_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="我是名字"
            android:textColor="@android:color/holo_blue_dark" />
        <TextView
            android:id="@+id/tiezi_time"
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-23dp"
            android:text="我是时间"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tieze_felei"
            android:text="-抗压吧-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="12sp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tieze_Text"
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.example.bottomnavigationabar2.view.NineGridTestLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:sapcing="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/Lin_comment"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/loveNum"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/dianzan" />
                        <TextView
                            android:id="@+id/loveNumStr"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="点赞数"
                            android:textColor="#090808"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Lin_give_the_thumbs_up"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/collection"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shocang" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/collectionStr"
                            android:text="收藏数"
                            android:textColor="#090808"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Lin_Collection"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/talkNum"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/pingl" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/talkNumStr"
                            android:text="评论数"
                            android:textColor="#090808"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>





    </LinearLayout>