<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradual_change"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="328dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/bt_shape_while"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/user"
                android:hint="账号:"
                android:maxLength="25"
                android:maxLines="1"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_password"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pass"
                android:hint="密码:"
                android:maxLength="25"
                android:maxLines="1"
                android:password="true"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <CheckBox
                android:layout_marginTop="7dp"
                android:id="@+id/rememberPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="记住密码"
                android:textColor="#000000" />
            <CheckBox
            android:id="@+id/autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:text="自动登录"
            android:textColor="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qq"/>
                <ImageView
                    android:paddingLeft="57dp"
                    android:paddingRight="57dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weixin"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weibo"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="-80px"
        android:layout_gravity="center_horizontal"
        android:id="@+id/denglu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="登录"
        android:background="@drawable/bt_shape_text" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-430dp"
        android:src="@drawable/logo"
        app:civ_border_color="#4CAF50"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:text="找回密码"
            android:textSize="19dp"
            android:id="@+id/tex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="80dp"
            android:text="|"
            android:textSize="20dp"
            android:id="@+id/tex2"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="注册账号"
            android:textSize="19dp"
            android:id="@+id/tex3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:text="登录注册代表您已同意《服务协议》"
        android:textSize="17dp"/>

</LinearLayout>