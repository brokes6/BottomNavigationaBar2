<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayou_broder"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.example.bottomnavigationabar2.MyImageView
        android:id="@+id/tieze_user_img"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ic_launcher" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tiezi_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="名字"/>
            <TextView
                android:id="@+id/tieze_felei"
            android:textSize="15sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="-50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:text="-抗压吧-" />
            <TextView
                android:id="@+id/tiezi_time"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx前发布" />

        </LinearLayout>

    <LinearLayout
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="-400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tieze_Text"
                android:layout_marginTop="10dp"
                android:text="2004年参演电视剧《与青春有关的日子》，开始在影视圈崭露头角[1]。2005年拍摄古装剧《锦衣卫》。2007年主演赵宝刚导演的青春剧《奋斗》[2]同年主演首部电影《走着瞧》。"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"/>

        <com.example.bottomnavigationabar2.view.NineGridTestLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:sapcing="4dp" />

        <LinearLayout
            android:layout_marginLeft="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/loveLayout"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/loveNum"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/thumbs_up_white" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="点赞数"
                        android:textColor="#090808"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/collectionLayout"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/collection"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shocang" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="收藏数"
                        android:textColor="#090808"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Lin_Collection"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/Collection"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/comment_white" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="评论数"
                        android:textColor="#090808"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
