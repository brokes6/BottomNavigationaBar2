<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/border_fenlei">
        <com.example.bottomnavigationabar2.MyImageView
            android:layout_gravity="center"
            android:id="@+id/organizationImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/organizationName"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="water"
            android:textColor="#010101"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:layout_marginRight="3dp"
                    android:textColor="#5e5e5e"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/followNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未知"
                    android:layout_marginRight="5dp"
                    android:textColor="#5e5e5e"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发帖"
                    android:layout_marginRight="3dp"
                    android:textColor="#5e5e5e"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/postNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未知"
                    android:textColor="#5e5e5e"
                    android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/introduce"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxLength="20"
                    android:maxLines="2"
                    android:text="这个社团很懒，暂时还没有介绍喔"
                    android:layout_marginBottom="10dp"
                    android:textColor="#323232"
                    android:textSize="14dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/collectionStr"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="bottom|center_horizontal"
            android:text="关注"
            android:textColor="#4e86d3"/>
</LinearLayout>
